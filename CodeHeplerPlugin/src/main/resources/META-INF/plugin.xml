<idea-plugin>
    <id>org.example.codehelper</id>
    <name>Code Helper Plugin</name>
    <version>1.0</version>
    <vendor email="you@example.com" url="https://example.com">Your Name</vendor>

    <actions>
        <action id="PrintLineAction"
                class="org.example.PrintLineAction"
                text="Print Current Line"
                description="Shows the current line and column in a popup">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="org.example.HttpCoordinateServer"
                preload="true" /> </extensions>
</idea-plugin>